<% layout('layout/boilerplate') -%>
<head>
    <style>
        label{
            color:green;
        }
        body{
            /* background-color: black; */
        }
        #heading{
            display: flex;
            justify-content: center;
            color:green;
            width:100%;
            height:100px;
            border:2px solid black;
            align-content: center;
        }
        input{
            height:50px;
            width: 700px;
        }
        label{
            /* margin-top: 20px; */
            font-size: 25px;
        }
    </style>
</head>
<div id="heading" >UPDATE DETAILS</div>
<form action="/products/<%= product._id%>?_method=PATCH" method="post">
    <fieldset style="border:2px solid green; margin:50px auto ; width:fit-content;">


        <label for="name"  >Name</label>
        <br>
        <input type="text" value="<%= product.name  %> " id="name" name="name" >
        <br>
        <br>
        <label for="url"  >Image Link</label>
        <br>
        <input type="text"  value="<%= product.img %> " id="url" name="img">
        <br>
        <br>
        <label for="price" >Price</label>
        <br>
        <input type="text"  value="<%= product.price %>" id="price" name="price" >
        <br>
        <br>
        <label for="desc" >Description</label>
        <br>
        <input  style="width:700px; height:30px" type="text" class="i" value="<%= product.desc %>"  id="desc" name="desc">
        <br>
        <br>
        <button style="background-color:green;color:white;width:100%;">SUBMIT</button>


    </fieldset>
</form>